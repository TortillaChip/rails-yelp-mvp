<h1><%= @restaurant.name %></h1>

<p>Address: <%= @restaurant.address %></p>
<p>Phone_number: <%= @restaurant.phone_number %></p>
<p>Category: <%= @restaurant.category %></p>
<h3>Reviews</h3>
<ul>
  <% @restaurant.reviews.each do |review| %>
  <li>Rating: <%= review.rating %>
  <%= review.content %></li>
  <% end %>
</ul>

<%= link_to "Go back to restaurants", restaurants_path, class: "btn btn-primary" %>
<%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant), class: "btn btn-primary" %>
<%= link_to "Add review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
